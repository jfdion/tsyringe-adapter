{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist/",
        "rootDir": "src",
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "es5",
        "lib": [
            "es5",
            "es6",
            "dom"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "types": [
            "node",
            "jest"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/**/*.spec.*"
    ]
}